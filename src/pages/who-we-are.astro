            //     icons: [
            //         "circle-flags:de",
            //         "circle-flags:en",
            //         "circle-flags:fr"
            //     ]
            // },
            {
                title: t("who-we-are.stats.industries.title"),
                amount: "8",
                icons: [
                    // Waldemar: retail, automotive, gaming, energy, public services
                    { icon: "tabler:shopping-bag", alt: t("who-we-are.stats.industries.retail") },
                    { icon: "tabler:car", alt: t("who-we-are.stats.industries.automotive", "Automotive") },
                    { icon: "tabler:device-gamepad-2", alt: t("who-we-are.stats.industries.gaming", "Gaming") },
                    { icon: "tabler:bolt", alt: t("who-we-are.stats.industries.energy") },
                    {
                        icon: "material-symbols:account-balance-outline-rounded",
                        alt: t("who-we-are.stats.industries.public")
                    },

                    // Martin: academic, insurance, consumer electronics, automotive again
                    { icon: "ph:graduation-cap", alt: t("who-we-are.stats.industries.academic") },
                    { icon: "tabler:report-money", alt: t("who-we-are.stats.industries.insurance") },
                    {
                        icon: "material-symbols:smartphone-outline",
                        alt: t("who-we-are.stats.industries.consumer-electronics")
                    }
                ]
            },
            {
                title: t("who-we-are.stats.countries.title"),
                amount: "4",
                icons: [
                    { icon: "circle-flags:de", alt: t("who-we-are.stats.countries.de") },
                    { icon: "circle-flags:en", alt: t("who-we-are.stats.countries.en") },
                    { icon: "circle-flags:ch", alt: t("who-we-are.stats.countries.ch") },
                    { icon: "circle-flags:at", alt: t("who-we-are.stats.countries.at") }
                ]
            }
        ]}
    />

