---
import { Trans } from "astro-i18next/components";
import { t, changeLanguage } from "i18next";
import Content from "~/components/widgets/Content.astro";
import Hero from "~/components/widgets/Hero.astro";
import Stats from "~/components/widgets/Stats.astro";
import Layout from "~/layouts/PageLayout.astro";

changeLanguage("de");

const metadata = {
    title: t("who-we-are.title"),
    description: t("who-we-are.description")
};
---

<Layout metadata={metadata}>
    <!-- Hero Widget ******************* -->

    <Hero tagline={t("who-we-are.tagline")} subtitle={t("who-we-are.subtitle")}>
        <Fragment slot="title">
            <Trans i18nKey="who-we-are.splash">
                Text with <div class="text-accent dark:text-white highlight">emphasis</div>
            </Trans>
        </Fragment>
    </Hero>

    <!-- Our values ******************* -->

    <Content
        isReversed
        items={[
            {
                title: t("who-we-are.values.proactivity.title"),
                icon: "tabler:run",
                description: t("who-we-are.values.proactivity.description")
            },
            {
                title: t("who-we-are.values.learning.title"),
                icon: "fa:lightbulb-o",
                description: t("who-we-are.values.learning.description")
            },
            {
                title: t("who-we-are.values.trustworthiness.title"),
                icon: "material-symbols:handshake-outline",
                description: t("who-we-are.values.trustworthiness.description")
            },
            {
                title: t("who-we-are.values.cheerfulness.title"),
                icon: "material-symbols:sunny-outline-rounded",
                description: t("who-we-are.values.cheerfulness.description")
            }
        ]}
        image={{ src: "/finland.jpg", alt: t("who-we-are.values.image-alt") }}
    >
        <Fragment slot="content">
            <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
                {t("who-we-are.values.title")}
            </h3>
            {t("who-we-are.values.subtitle")}
        </Fragment>

        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Content>

    <!-- Our impact ******************* -->

    <Content
        items={[
            {
                title: t("who-we-are.impact.productivity.title"),
                icon: "material-symbols:settings-heart",
                description: t("who-we-are.impact.productivity.description")
            },
            {
                title: t("who-we-are.impact.costs.title"),
                icon: "material-symbols:euro-symbol-rounded",
                description: t("who-we-are.impact.costs.description")
            },
            {
                title: t("who-we-are.impact.focus.title"),
                icon: "tabler:target-arrow",
                description: t("who-we-are.impact.focus.description")
            },
            {
                title: t("who-we-are.impact.adaptation.title"),
                icon: "material-symbols:deployed-code-history-outline",
                description: t("who-we-are.impact.adaptation.description")
            }
        ]}
        image={{
            src: "https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80",
            alt: t("who-we-are.impact.image-alt")
        }}
    >
        <Fragment slot="content">
            <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
                {t("who-we-are.impact.title")}
            </h3>
            {t("who-we-are.impact.subtitle")}
        </Fragment>

        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Content>

    <!-- Stats Widget ****************** -->
    <Stats
        title={t("who-we-are.stats.title")}
        stats={[
            {
                title: t("who-we-are.stats.experience-years"),
                // 10 Waldemar (of 11 total) + 5 Martin (of 9 total)
                amount: "15"
            },
            {
                title: t("who-we-are.stats.cloud-providers"),
                amount: "7",
                icons: [
                    { icon: "aws", alt: "Amazon Web Services" },
                    { icon: "microsoftazure", alt: "Microsoft Azure" },
                    { icon: "googlecloud", alt: "Google Cloud Platform" },
                    { icon: "scaleway", alt: "Scaleway" },
                    { icon: "hetzner", alt: "Hetzner" },
                    { icon: "redhatopenshift", alt: "Red Hat OpenShift" },
                    { icon: "openstack", alt: "OpenStack" }
                    // also StackIt, but icon not freely available
                ]
            },
            // {
            //     title:"Fluent languages",
