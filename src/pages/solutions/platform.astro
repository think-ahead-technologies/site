import Features3 from "~/components/widgets/Features3.astro";
import Hero from "~/components/widgets/Hero2.astro";
import Layout from "~/layouts/PageLayout.astro";

changeLanguage("de");

const metadata = {
    title: t("solutions.platform.title")
};
