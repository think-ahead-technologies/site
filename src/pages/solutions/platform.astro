---
import { t, changeLanguage } from "i18next";
import CallToAction from "~/components/widgets/CallToAction.astro";
import Features from "~/components/widgets/Features.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Features3 from "~/components/widgets/Features3.astro";
import Hero from "~/components/widgets/Hero2.astro";
import Layout from "~/layouts/PageLayout.astro";

changeLanguage("de");

const metadata = {
    title: t("platform.title"),
    description: t("platform.splash")
};
---

<Layout metadata={metadata}>
    <!-- Hero Widget ******************* -->

    <Hero
        title={t("platform.splash")}
        tagline={t("platform.title")}
        subtitle={t("platform.subtitle")}
        actions={[
            {
                variant: "primary",
                text: t("index.learn-more"),
                href: "#essential"
            },
            {
                variant: "secondary",
                text: t("solutions.how-we-can-help"),
                href: "#solutions"
            }
        ]}
        image={{
            src: "/working-together-scott-graham-unsplash.jpg",
            alt: t("images.working-together")
        }}
    />

    <!-- Features2 Widget ************** -->

    <Features
        id="essential"
        title={t("platform.essential.title")}
        subtitle={t("platform.essential.subtitle")}
        columns={2}
        items={[
            {
                title: t("platform.essential.goals.title"),
                description: t("platform.essential.goals.description"),
                icon: "tabler:target-arrow"
            },
            {
                title: t("platform.essential.adaptation.title"),
                description: t("platform.essential.adaptation.description"),
                icon: "tabler:bolt"
            },
            {
                title: t("platform.essential.complexity.title"),
                description: t("platform.essential.complexity.description"),
                icon: "tabler:cloud-star"
            },
            {
                title: t("platform.essential.predictability.title"),
                description: t("platform.essential.predictability.description"),
                icon: "material-symbols:show-chart-rounded"
            },
            {
                title: t("platform.essential.security.title"),
                description: t("platform.essential.security.description"),
                icon: "tabler:cloud-lock"
            },
            {
                title: t("platform.essential.sustainability.title"),
                description: t("platform.essential.sustainability.description"),
                icon: "tabler:cloud-share"
            }
        ]}
    />

    <Features3
        id="solutions"
        title={t("platform.solutions.title")}
        subtitle={t("platform.solutions.subtitle")}
        columns={2}
        items={[
            {
                title: t("platform.solutions.assessment.title"),
                description: t("platform.solutions.assessment.description"),
                icon: "material-symbols:search-insights"
            },
            {
                title: t("platform.solutions.developers.title"),
                description: t("platform.solutions.developers.description"),
                icon: "material-symbols:deployed-code-account-outline"
            },
            {
                title: t("platform.solutions.hybrid.title"),
                description: t("platform.solutions.hybrid.description"),
                icon: "tabler:cloud-data-connection"
            },
            {
                title: t("platform.solutions.ai.title"),
                description: t("platform.solutions.ai.description"),
                icon: "tabler:brain"
            }
        ]}
        image={{
            src: "/workshop-jason-goodman-unsplash.jpg",
            alt: t("image.workshop")
        }}
    />

    <!-- Testimonials Widget *********** -->

    <!-- <Testimonials
    title="Words from real customers"
    testimonials={[
      {
        testimonial: `The designs are not only visually appealing but also highly professional. The templates have saved me a significant amount of time while helping me make a lasting impression on my clients.`,
        name: 'Emily Kennedy',
        job: 'Front-end developer',
        image: {
          src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
          alt: 'Emily Kennedy Image',
        },
      }
    ]}
    callToAction={{
      target: '_blank',
      text: 'More testimonials...',
      href: 'https://github.com/onwidget/astrowind',
      icon: 'tabler:chevron-right',
    }}
  /> -->

    <Features2
        id="services"
        title={t("solutions.services.title")}
        columns={2}
        items={[
            {
                title: t("solutions.services.consult.title"),
                description: t("solutions.services.consult.description").toString(),
                icon: "tabler:brain"
            },
            {
                title: t("solutions.services.implement.title"),
                description: t("solutions.services.implement.description").toString(),
                icon: "tabler:code-dots"
            }
        ]}
    />

    <!-- CallToAction Widget *********** -->

    <CallToAction
        actions={[
            {
                variant: "primary",
                text: t("contact.title"),
                href: `/${Astro.currentLocale}/contact`,
                icon: "tabler:mail"
            }
        ]}
        title={t("solutions.get-in-touch")}
        subtitle={t("contact.index-description")}
    />
</Layout>
