---
import { t, changeLanguage } from "i18next";
import CallToAction from "~/components/widgets/CallToAction.astro";
import Features from "~/components/widgets/Features.astro";
import Features3 from "~/components/widgets/Features3.astro";
import Hero from "~/components/widgets/Hero2.astro";
import Layout from "~/layouts/PageLayout.astro";

changeLanguage("de");

const metadata = {
    title: t("platform.title"),
    description: t("platform.splash")
};
---

<Layout metadata={metadata}>
    <!-- Hero Widget ******************* -->

    <Hero
        title={t("platform.splash")}
        tagline={t("platform.title")}
        subtitle={t("platform.subtitle")}
        actions={[
            {
                variant: "primary",
                text: t("index.learnmore"),
                href: "#essential"
            }
        ]}
        image={{
            src: "/working-together-scott-graham-unsplash.jpg",
            alt: t("images.working-together")
        }}
    />

