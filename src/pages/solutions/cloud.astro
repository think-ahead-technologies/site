---
import { t, changeLanguage } from "i18next";
import CallToAction from "~/components/widgets/CallToAction.astro";
import Features from "~/components/widgets/Features.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Features3 from "~/components/widgets/Features3.astro";
import Hero from "~/components/widgets/Hero2.astro";
import { PRIMARY_LANGUAGE } from "~/i18n/utils";
import Layout from "~/layouts/PageLayout.astro";

changeLanguage("de");

const metadata = {
    title: t("cloud.title", "Cloud Computing"),
    description: t("cloud.splash")
};
---

<Layout metadata={metadata}>
    <!-- Hero Widget ******************* -->

    <Hero
        title={t("cloud.splash")}
        tagline={t("cloud.title", "Cloud Computing")}
        subtitle={t("cloud.subtitle")}
        actions={[
            {
                variant: "primary",
                text: t("index.learn-more"),
                href: "#benefits"
            },
            {
                variant: "secondary",
                text: t("solutions.how-we-can-help"),
                href: "#solutions"
            }
        ]}
        image={{
            src: "/infrastructure-krzysztof-kowalik-unsplash.jpg",
            alt: t("images.infrastructure")
        }}
    />

    <Features3
        id="benefits"
        title={t("cloud.benefits.title")}
        subtitle={t("cloud.benefits.subtitle")}
        columns={2}
        items={[
            {
                title: t("cloud.benefits.scalability.title"),
                description: t("cloud.benefits.scalability.description"),
                icon: "tabler:resize"
            },
            {
                title: t("cloud.benefits.flexibility.title"),
                description: t("cloud.benefits.flexibility.description"),
                icon: "tabler:arrows-shuffle"
            },
            {
                title: t("cloud.benefits.cost.title"),
                description: t("cloud.benefits.cost.description"),
                icon: "tabler:cloud-dollar"
            },
            {
                title: t("cloud.benefits.security.title"),
                description: t("cloud.benefits.security.description"),
                icon: "tabler:cloud-lock-open"
            },
            {
                title: t("cloud.benefits.availability.title"),
                description: t("cloud.benefits.availability.description"),
                icon: "tabler:database-exclamation"
            },
            {
                title: t("cloud.benefits.maintenance.title"),
                description: t("cloud.benefits.maintenance.description"),
                icon: "material-symbols:upgrade"
            }
        ]}
    />

    <Features3
        id="challenges"
        title={t("cloud.challenges.title")}
        subtitle={t("cloud.challenges.subtitle")}
        columns={3}
        items={[
            {
                title: t("cloud.challenges.uncertainty.title"),
                description: t("cloud.challenges.uncertainty.description"),
                icon: "tabler:user-question"
            },
            // {
            //     title: t("Unclear direction"),
            //     description: t(
            //         "So many tools and approaches are made possible with the Cloud, that it can be hard to know where to focus your resources once you've started."
            //     ),
            //     icon: "tabler:compass"
            // },
            {
                title: t("cloud.challenges.cost.title"),
                description: t("cloud.challenges.cost.description"),
                icon: "tabler:businessplan"
            },
            {
                title: t("cloud.challenges.combination.title"),
                description: t("cloud.challenges.combination.description"),
                icon: "tabler:layers-linked"
            },
            // {
            //     title: t("Inconsistent or slow deployment"),
            //     description: t(
            //         "As with any code system, a well-structured path to production is essential for deploying reliably while minimising errors."
            //     ),
            //     icon: "tabler:upload"
            // },
            {
                title: t("cloud.challenges.ux.title"),
                description: t("cloud.challenges.ux.description"),
                icon: "tabler:mood-sad-2"
            },
            {
                title: t("cloud.challenges.keeping-track.title"),
                description: t("cloud.challenges.keeping-track.description"),
                icon: "material-symbols:clinical-notes-outline"
            },
            {
                title: t("cloud.challenges.security.title"),
                description: t("cloud.challenges.security.description"),
                icon: "tabler:cloud-lock",
                callToAction: {
                    text: t("cloud.challenges.security.link"),
                    href: `/${Astro.currentLocale || PRIMARY_LANGUAGE}/solutions/security`,
                    icon: "tabler:circle-arrow-right"
                }
            }
        ]}
    />

    <Features
        id="solutions"
        title={t("cloud.solutions.title")}
        subtitle={t("cloud.solutions.subtitle")}
        columns={2}
        items={[
            {
                title: t("cloud.solutions.migration.title"),
                description: t("cloud.solutions.migration.description"),
                icon: "tabler:cloud-upload"
            },
            {
                title: t("cloud.solutions.architecture.title"),
                description: t("cloud.solutions.architecture.description"),
                icon: "material-symbols:design-services-outline"
            },
            {
                title: t("cloud.solutions.cost.title"),
                description: t("cloud.solutions.cost.description"),
                icon: "material-symbols:euro-symbol-rounded"
            },
            {
                title: t("cloud.solutions.devops.title"),
                description: t("cloud.solutions.devops.description"),
                icon: "tabler:database-star"
            }
        ]}
    />

    <!-- Testimonials Widget *********** -->

