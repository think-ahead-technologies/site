    <CallToAction
        actions={[
            {
                variant: "primary",
                text: t("contact.title"),
                href: `/${Astro.currentLocale}/contact`,
                icon: "tabler:mail"
            }
        ]}
        title={t("solutions.get-in-touch")}
        subtitle={t("contact.index-description")}
    />
</Layout>
