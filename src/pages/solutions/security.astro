---
import { t, changeLanguage } from "i18next";
import CallToAction from "~/components/widgets/CallToAction.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Hero from "~/components/widgets/Hero2.astro";
import Stats from "~/components/widgets/Stats.astro";
import Steps from "~/components/widgets/Steps.astro";
import Layout from "~/layouts/PageLayout.astro";

changeLanguage("de");

const metadata = {
    title: t("security.title"),
    description: t("security.description")
};
---

<Layout metadata={metadata}>
    <!-- Hero Widget ******************* -->

    <Hero
        tagline={t("security.title")}
        title={t("security.splash")}
        subtitle={t("security.subtitle")}
        actions={[
            {
                variant: "primary",
                text: t("index.learn-more"),
                href: "#stats"
            },
            {
                variant: "secondary",
                text: t("solutions.how-we-can-help"),
                href: "#services"
            }
        ]}
        image={{
            src: "/servers-christina-wocintechchat-com-unsplash.jpg",
            alt: t("images.servers")
        }}
    />

    <!-- Stats Widget ****************** -->
    <Stats
        id="stats"
        title={t("security.stats.title")}
        classes={{ title: "mt-3" }}
        stats={[
            {
                icon: "tabler:zoom-money",
                title: t("security.stats.damage.description"),
                amount: t("security.stats.damage.amount").toString()
            },
            {
                icon: "tabler:user-exclamation",
                title: t("security.stats.human.description"),
                amount: t("security.stats.human.amount").toString()
            },
            {
                icon: "tabler:calendar-time",
                title: t("security.stats.remediation.description"),
                amount: t("security.stats.remediation.amount").toString()
            },
            {
                icon: "tabler:clipboard-x",
                title: t("security.stats.problem.description"),
                amount: t("security.stats.problem.amount").toString()
            }
        ]}
    />

    <Steps
        title={t("security.protect.title")}
        subtitle={t("security.protect.subtitle")}
        items={[
            {
                title: t("security.protect.agile.title"),
                description: t("security.protect.agile.description").toString(),
                icon: "material-symbols:deployed-code-account-outline"
            },
            {
                title: t("security.protect.zerotrust.title"),
                description: t("security.protect.zerotrust.description").toString(),
                icon: "tabler:shield-check"
            },
            {
                title: t("security.protect.supplychain.title"),
                description: t("security.protect.supplychain.description").toString(),
                icon: "tabler:git-merge"
            },
            {
                title: t("security.protect.cloud.title"),
                description: t("security.protect.cloud.description").toString(),
                icon: "tabler:cloud-lock"
            }
        ]}
    />

    <Features2
        id="services"
        title={t("solutions.services.title")}
        columns={3}
        items={[
            {
                title: t("solutions.services.consult.title"),
                description: t("solutions.services.consult.description").toString(),
                icon: "tabler:brain"
            },
            {
                title: t("solutions.services.implement.title"),
                description: t("solutions.services.implement.description").toString(),
                icon: "tabler:code-dots"
            },
            {
                title: t("solutions.services.train.title"),
                description: t("solutions.services.train.description").toString(),
                icon: "tabler:school"
            }
        ]}
    />

    <CallToAction
        actions={[
            {
                variant: "primary",
                text: t("contact.title"),
                href: `/${Astro.currentLocale}/contact`,
                icon: "tabler:mail"
            }
        ]}
        title={t("solutions.get-in-touch")}
        subtitle={t("contact.index-description")}
    />
</Layout>
