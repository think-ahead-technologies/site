    <!-- CallToAction Widget *********** -->

    <CallToAction
        actions={[
            {
                variant: "primary",
                text: t("contact.title") || "Error",
                href: "/contact",
                icon: "tabler:mail"
            }
        ]}
    >
        <Fragment slot="title">{t("contact.letsconnect") || "Error"}</Fragment>

        <Fragment slot="subtitle">
            {t("contact.subtitle") || "Error"}
