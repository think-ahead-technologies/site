      { title: 'Downloads', amount: '182K' },
      { title: 'Websites Launched', amount: '87' },
      { title: 'User Ratings', amount: '4.8' },
      { title: 'Satisfied Clients', amount: '116K' },
    ]}
  /> -->

    <!-- Brands Widget ****************** -->

    <!-- <Brands
    title="Partnerships & Collaborations"
    subtitle="At Astrowind, we believe in the power of collaboration to drive innovation and create exceptional experiences."
    icons={[]}
    images={[
      {
        src: 'https://image.com/something-something.png',
        alt: 'CompanyName',
      }
    ]}
  /> -->

    <!-- Features2 Widget ************** -->

    <Features2
        id="solutions"
        title={t("solutions.intro") || "Error"}
        subtitle={t("solutions.subtitle") || "Error"}
        items={[
            {
                title: t("solutions.security.title") || "Error",
                description: t("solutions.security.description") || "Error",
                icon: "flat-color-icons:lock",
                callToAction: {
                    variant: "link",
                    text: "Learn more",
                    href: getRelativeLocaleUrl(Astro.currentLocale || "en", "/solutions/security"),
                    icon: "tabler:circle-arrow-right"
                }
            },
            {
                title: t("solutions.platform.title") || "Error",
                description: t("solutions.platform.description") || "Error",
                icon: "material-symbols:cloud",
                callToAction: {
                    variant: "link",
                    text: "Learn more",
                    href: getRelativeLocaleUrl(Astro.currentLocale || "en", "/solutions/platform"),
                    icon: "tabler:circle-arrow-right"
                }
            },
            {
                title: t("solutions.training.title") || "Error",
                description: t("solutions.training.description") || "Error",
                icon: "flat-color-icons:voice-presentation",
                callToAction: {
                    variant: "link",
                    text: "Learn more",
                    href: getRelativeLocaleUrl(Astro.currentLocale || "en", "/solutions/training"),
                    icon: "tabler:circle-arrow-right"
                }
            }
        ]}
    >
        <Fragment slot="bg">
            <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
        </Fragment>
    </Features2>

    <!-- Features Widget *************** -->

    <!-- <Features
    id="features"
