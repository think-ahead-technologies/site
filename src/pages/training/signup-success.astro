---
import { t, changeLanguage } from "i18next";
import Layout from "~/layouts/PageLayout.astro";
import Hero from "~/components/widgets/Hero.astro";
import Trans from "node_modules/astro-i18next/src/components/Trans.astro";

changeLanguage("de");

const metadata = {
    title: t("contact.title")
};
---

<Layout metadata={metadata}>
    <Hero
        title={t("training.signup.thanks")}
        subtitle={t("training.signup.next-steps")}
        actions={[
            {
                variant: "primary",
                text: t("contact.form-success.home-link"),
                icon: "material-symbols:navigate-next",
                href: `/${Astro.currentLocale}/solutions/training`
            }
        ]}
    />
</Layout>
